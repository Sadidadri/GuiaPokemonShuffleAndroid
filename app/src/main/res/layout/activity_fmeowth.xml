<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fmeowth">

    <LinearLayout
        android:id="@+id/cabeceraBordeSup"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#A39191"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:id="@+id/cabecera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B9ADAD"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgmeowth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/meowth" />

        <TextView
            android:id="@+id/txt_fmeowth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Fase Meowth"
            android:textSize="40sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/cabeceraBordeInf"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#A39191"
        android:orientation="horizontal">

    </LinearLayout>

    <ScrollView
        android:id="@+id/contenido"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/padre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/contenedorEquipos1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/mewtwoY"
                    android:layout_width="230dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="@drawable/megamewtwtoy"
                    android:onClick="clickMewtwoY" />

                <LinearLayout
                    android:id="@+id/content2Eq"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/eq1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Equipo 1:"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:id="@+id/content2eqHor"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_miembro1"
                            android:layout_width="60dp"
                            android:layout_height="75dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/unownexclama"
                            android:onClick="clickUnown" />

                        <Button
                            android:id="@+id/btn_miembro2"
                            android:layout_width="60dp"
                            android:layout_height="75dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/imgfg18"
                            android:onClick="clickMeloetta" />

                        <Button
                            android:id="@+id/btn_miembro3"
                            android:layout_width="60dp"
                            android:layout_height="75dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/imgod7"
                            android:onClick="clickCosmog" />
                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/btn_rango1"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="@drawable/nivel_s" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/contenedorEquipos2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/salamence"
                    android:layout_width="230dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="@drawable/megasalamence"
                    android:onClick="clickSalamence" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Equipo 2:"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_miembro4"
                            android:layout_width="60dp"
                            android:layout_height="75dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/imgoe53"
                            android:onClick="clickLugia" />

                        <Button
                            android:id="@+id/btn_miembro5"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/swablu"
                            android:onClick="clickSwablu" />

                        <Button
                            android:id="@+id/btn_miembro6"
                            android:layout_width="60dp"
                            android:layout_height="75dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/pokeball"
                            android:onClick="clickPokeball" />
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_rango2"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="@drawable/nivel_a" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>