<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vistaPrincipal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fespeciales">

    <LinearLayout
        android:id="@+id/cabecera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_pkmn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/pkmnshufflelogo" />

        <TextView
            android:id="@+id/txtdia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="32sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/contenidoSemana"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtsemana"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Semana:"
            android:textSize="36sp" />

        <Spinner
            android:id="@+id/semanaspinner"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:gravity="center" />
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|fill_horizontal"
        android:layout_margin="5dp"
        android:alignmentMode="alignBounds"
        android:columnCount="4"
        android:rowCount="9">

        <TextView
            android:id="@+id/txtretoU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Ultrarreto:"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imgU1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_columnSpan="3" />

        <TextView
            android:id="@+id/txtotroseventos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Otros Eventos:"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/imagenesOtrosEventos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="3"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgOE1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/imgOE2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/imgOE3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/imgOE4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/imgOE5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1" />

        </LinearLayout>

        <TextView
            android:id="@+id/txtfasegradual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fase Gradual:"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imgFG1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_columnSpan="3" />

        <TextView
            android:id="@+id/txtSafari"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowSpan="2"
            android:text="Zona Safari:"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/imagenesZonaSafari1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="3"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgSF1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/imgSF2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/imgSF3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/imgSF4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/imgSF5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/imagenesZonaSafari2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="3"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgSF6"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/imgSF7"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/imgSF8"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/imgSF9"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/imgSF10"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1" />

        </LinearLayout>

        <TextView
            android:id="@+id/txtOportunidadDiaria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Oportunidad Diaria:"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/imgOD1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_columnSpan="3" />

        <TextView
            android:id="@+id/txtdesafioespecial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Desafio Especial:"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/imgE1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_columnSpan="3" />

        <TextView
            android:id="@+id/txtfasecompeticion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fase Competición:"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/imgC1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_columnSpan="3" />

        <TextView
            android:id="@+id/txtpkmndeldia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pokémon del Día:"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/imagenespkmndia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="3"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgPD1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/imgPD2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/imgPD3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/imgPD4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/imgPD5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1" />

        </LinearLayout>

        ;


    </GridLayout>

</LinearLayout>